  <script>
    // JavaScript to handle navbar style on scroll
    const navbar = document.getElementById('navbar');
    const initialNavHTML = navbar.innerHTML; // Store the initial transparent navbar
    let whiteNavHTML; // To store the white navbar version

    // Function to build the white navbar string
    function buildWhiteNav() {
      return `
          <div class="container mx-auto px-6 py-3 flex justify-between items-center">
            <a class="text-gray-800 text-2xl font-bold tracking-tight" href="/">UK Job Portal</a>
            <div class="hidden md:flex items-center space-x-8">
              <a class="nav-link text-gray-700 font-medium" href="#about">About Us</a>
              <a class="nav-link text-gray-700 font-medium" href="#jobs">Browse Jobs</a>
              <a class="nav-link text-gray-700 font-medium" href="#contact">Contact Us</a>
              <a class="text-gray-700 hover:text-indigo-600 transition" href="/login">Login</a>
              <a class="bg-indigo-600 hover:bg-indigo-700 text-white font-bold py-2 px-5 rounded-full transition duration-300 transform hover:scale-105" href="http://localhost:3000/register">Register</a>

              <!-- Dark Mode Toggle Button inside white nav -->
              <button id="darkModeToggle" class="ml-4 text-gray-700 focus:outline-none px-4 py-2 border border-gray-700 rounded hover:bg-gray-200 hover:text-indigo-600 transition" title="Toggle Dark Mode">
                <i class="fas fa-moon"></i> Dark Mode
              </button>

              <!-- Dashboard Link - hidden, backend to control -->
              <a id="dashboardLink" href="/dashboard" class="hidden text-gray-700 hover:text-indigo-600 transition ml-4 font-semibold">Dashboard</a>
            </div>
          </div>
        `;
    }
    whiteNavHTML = buildWhiteNav();

    window.addEventListener('scroll', function () {
      if (window.scrollY > 50) {
        if (!navbar.classList.contains('bg-white')) {
          navbar.classList.add('bg-white', 'shadow-lg');
          navbar.innerHTML = whiteNavHTML;
          attachDarkModeListener();
          attachLoginModalListeners();
        }
      } else {
        if (navbar.classList.contains('bg-white')) {
          navbar.classList.remove('bg-white', 'shadow-lg');
          navbar.innerHTML = initialNavHTML;
          attachDarkModeListener();
          attachLoginModalListeners();
        }
      }
    });

    // JavaScript for revealing elements on scroll
    const revealElements = document.querySelectorAll('.reveal');
    const revealOnScroll = () => {
      for (let i = 0; i < revealElements.length; i++) {
        const windowHeight = window.innerHeight;
        const elementTop = revealElements[i].getBoundingClientRect().top;
        const elementVisible = 150; // Distance from bottom of viewport
        if (elementTop < windowHeight - elementVisible) {
          revealElements[i].classList.add('active');
        }
      }
    };
    window.addEventListener('scroll', revealOnScroll);
    revealOnScroll();

    // Dark Mode Toggle Logic
    function attachDarkModeListener() {
      const toggles = document.querySelectorAll('#darkModeToggle');
      toggles.forEach((toggle) => {
        toggle.addEventListener('click', () => {
          document.body.classList.toggle('dark-mode');

          if (document.body.classList.contains('dark-mode')) {
            toggle.innerHTML = '<i class="fas fa-sun"></i> Light Mode';
          } else {
            toggle.innerHTML = '<i class="fas fa-moon"></i> Dark Mode';
          }
        });
      });
    }
    attachDarkModeListener();

    // Login Modal Logic
    function attachLoginModalListeners() {
      const loginBtn = document.getElementById('loginBtn');
      const loginModal = document.getElementById('loginModal');
      const loginModalClose = document.getElementById('loginModalClose');

      if (loginBtn) {
        loginBtn.onclick = () => loginModal.classList.add('active');
      }
      if (loginModalClose) {
        loginModalClose.onclick = () => loginModal.classList.remove('active');
      }
      // Close modal on clicking outside content
      loginModal.addEventListener('click', (e) => {
        if (e.target === loginModal) {
          loginModal.classList.remove('active');
        }
      });
    }
    attachLoginModalListeners();

    // Chat Support Button Action (Placeholder)
    const chatBtn = document.getElementById('chatSupport');
    chatBtn.addEventListener('click', () => {
      alert('Chat support feature coming soon!');
    });
